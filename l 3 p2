#include <iostream>
#include <cstring> 
#include <algorithm> 
using namespace std ;
class triangle {
private :
float base ; 
float height ; 
public :
void setbase_height(float b , float h)
{
    base = b ; 
    height = h ;
}
float area()
{
    return .5 * base * height ; 
}
 void print ()
 {
     cout << "base = "<<base <<"\n"<< "height = "<<height <<"\n"<< "area = "<<area() <<"\n " ; }
}; 
int main() {
   triangle x ; 
   x.setbase_height(5.5 ,5.5) ; 
   cout << x.area()<<endl  ; 
   x.print() ; 
    return 0;
}
